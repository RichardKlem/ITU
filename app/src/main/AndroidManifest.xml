<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="itu.proj.wilo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wilo"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="itu.proj.wilo.MYLOGONACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Wilo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Wilo.NoActionBar">
            <intent-filter>
                <action android:name="itu.proj.wilo.MYLOGONACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HotelActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Wilo.NoActionBar">
        </activity>
        <activity
            android:name=".RoomActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Wilo.NoActionBar">
        </activity>
        <activity
            android:name=".BabySitterReserveActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Wilo.NoActionBar">
        </activity>
    </application>

</manifest>